{
  "extends": "./node_modules/gts/",
  "ignorePatterns": "build/**/*",
  "globals": {
    "describe": "readonly",
    "it": "readonly",
    "expect": "readonly"
  },
  "rules": {
    // So we can lazy load modules using require()
    "@typescript-eslint/no-var-requires": "off",
    
    // So we can use local packages like gluco-check-core
    "node/no-unpublished-import": "off"
  }
}
